<div class="container">
  <div id="map"></div>
  <h1 class="js-pickup"></h1>
  <div class="row">
    <form method="post" action="<%= notifications_path %>?admin_secret=<%= params[:admin_secret] %>" role="form">
    <div class="col-md-6">
      <div class="form-group">
        <table class="table table-bordered table-hover js-addresses" >
          <thead>
            <tr>
              <th>Address</th>
              <th>Pickup</th>
            </tr>
          </tbody>
          <tbody></tbody>
        </table>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="sms_message">Message:</label>
        <textarea class="form-control" id="sms_message" name="message" cols="40"
          rows="4" maxlength="160"><%= params[:message] %></textarea>
        <div id="sms_feedback"></div>

      </div>
      <button class="btn btn-primary">Submit</button>
    </div>
    </form>
  </div>
</div>
