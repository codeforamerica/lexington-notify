<div class="container">
  <h1>Let's send a text!</h1>
  <div class="row">
    <form method="post" action="<%= notifications_path %>" role="form">
    <div class="col-md-6">
      <div class="form-group">
        <% @users.each do |user| %>
          <% user.phones.each do |phone| %>
            <div>
              <% id = "number_#{phone.number}" %>
              <%= check_box_tag('number[]', phone.number, nil, id: id) %>
              <%= label_tag id, phone.number %>
              <%= user.first_name %>
              <%= user.last_name %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="sms_message">Message:</label>
        <textarea class="form-control" id="sms_message" name="message" cols="40"
          rows="4" maxlength="160"><%= params[:message] %></textarea>
        <div id="sms_feedback"></div>

      </div>
      <button class="btn btn-default">Submit</button>
    </div>
    </form>
  </div>
</div>
